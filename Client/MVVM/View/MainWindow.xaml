<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="200,0,0,0" Orientation="Horizontal">
            <TextBox Name="MsgTxtBox" Width="300" Height="30" FontSize="22" Margin="0,-250,0,0"></TextBox>
            <Button Name="Fldialog" Width="50" Height="20" Margin="0,-250,0,0"> . . .</Button>
        </StackPanel>
        <Button Command="{Binding Send}" Width="200" Height="50" Margin="-100,0,0,0">Send</Button>
    </Grid>
</Window>
